#include <stdio.h>

printLine(int n)
{
    int i, j ;
    for (i = 1; i <= n; i++){
        for (j = 1; j <=i; j++){
            printf("%d ", j);
        }
        printf("\n");
    }
    for (i = 1; i <= n; i++){
        for (j = 1; j <= n-i+1 ; j++){
            printf("%d ", j);
        }
        printf("\n");
    }
}

int main()
{
    int n;
    scanf("%d", &n);
    printf("%d", printLine(n));

    return 0;

}




#include <stdio.h>

printLine()
{
    int n;
    scanf("%d", &n);
}

int main()
{
    
    int i, j ;
    for (i = 1; i <= n; i++){
        for (j = 1; j <=i; j++){
            printf("%d ", j);
        }
        printf("\n");
    }
    for (i = 1; i <= n; i++){
        for (j = 1; j <= n-i+1 ; j++){
            printf("%d ", j);
        }
        printf("\n");
    }
    printf("%d", printLine());

    return 0;

}